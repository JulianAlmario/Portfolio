---
const headerType:{title:string, url:string}[] = [
  {
    title: "Home",
    url: "/",
  },
   {
    title: "About",
    url: "/about",
  },
  {
    title: "Projects",
    url: "/projects",
  },
  {
    title: "Education",
    url: "/education",
  },
  {
    title: "Skills",
    url: "/skills",
  },
];
---

<header class="bg-midnight-900 p-4">
    <nav class="flex justify-center gap-4">
        {headerType.map((item) => (
            <a
                href={item.url}
                class="text-xl text-azure-400 hover:text-azure-300 hover:text-2xl transition duration-100 px-3 py-2 rounded-md font-medium"
            >
                {item.title}
            </a>
        ))}
    </nav>
</header>